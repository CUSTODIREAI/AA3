# Centralized version pins for Docker builds
# Base toolchain
CUDA_BASE_IMAGE=nvidia/cuda:11.8.0-cudnn8-runtime-ubuntu22.04
PYTHON_MINOR=3.10
TENSORFLOW_VERSION=2.12.1
CUDNN_MAJOR_MINOR=8.6

# Scientific stack pins (Python 3.10 compatible)
NUMPY_VERSION=1.26.4
SCIPY_VERSION=1.11.4
NUMEXPR_VERSION=2.8.6
H5PY_VERSION=3.10.0
SCIKIT_IMAGE_VERSION=0.21.0
OPENCV_VERSION=4.8.1.78
TQDM_VERSION=4.66.1
PILLOW_VERSION=10.1.0
PROTOBUF_VERSION=4.23.4
TF_IO_GCS_VERSION=0.32.0

# DFL layer
# Default to upstream DFL (TF1.x); for TF2 on Linux, switch to a TF2-enabled fork and pin commit.
DFL_REPO=https://github.com/iperov/DeepFaceLab.git
DFL_COMMIT=
INSTALL_TORCH=0

# Image tags
IMAGE_TAG_BASE=dfl-base:cuda11.8-tf2.12.1-py3.10
IMAGE_TAG_DFL=dfl:tf2.12.1
